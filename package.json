{
  "name": "parliament-requests-system",
  "version": "2.0.0",
  "description": "نظام متطور لإدارة الطلبات البرلمانية - النائب أحمد الحديدي",
  "author": "مهندس محمد حماد",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/mohamednasr5/work",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohamednasr5/work.git"
  },
  "keywords": [
    "parliament",
    "requests",
    "management",
    "الطلبات",
    "البرلمان",
    "pwa",
    "web-app",
    "electron",
    "firebase",
    "dashboard",
    "analytics"
  ],
  "scripts": {
    "start": "http-server -p 8000 -c-1",
    "dev": "http-server -p 8080 -c-1",
    "build": "npm run clean && npm run copy-assets",
    "clean": "rm -rf dist && mkdir -p dist",
    "copy-assets": "cp -r *.html *.js *.css *.json *.md dist/",
    "electron": "electron .",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "electron-build": "electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder -wml",
    "test": "jest --coverage",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,json,md,html,css}\"",
    "serve:pwa": "serve dist -p 3000",
    "deploy:firebase": "firebase deploy --only hosting"
  },
  "dependencies": {
    "firebase": "^9.22.0",
    "chart.js": "^4.3.0",
    "xlsx": "^0.18.5",
    "axios": "^1.6.0",
    "localforage": "^1.10.0",
    "idb": "^7.1.1",
    "workbox-window": "^6.6.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.3",
    "electron-is-dev": "^3.0.0",
    "cross-env": "^7.0.3",
    "http-server": "^14.1.1",
    "serve": "^14.2.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "@capacitor/cli": "^5.5.0",
    "@capacitor/android": "^5.5.0",
    "@capacitor/ios": "^5.5.0",
    "@capacitor/core": "^5.5.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "last and_qq 4 versions"
  ],
  "main": "main.js",
  "build": {
    "appId": "com.parliament.requests",
    "productName": "نظام إدارة الطلبات",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "Office",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "نظام إدارة الطلبات"
    },
    "publish": {
      "provider": "github",
      "owner": "mohamednasr5",
      "repo": "work"
    }
  },
  "capacitor": {
    "appId": "com.parliament.requests",
    "appName": "Parliamentary Requests",
    "webDir": "dist",
    "bundledWebRuntime": false,
    "server": {
      "androidScheme": "https"
    }
  }
}
