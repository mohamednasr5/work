{
  "name": "parliament-requests-system",
  "version": "2.0.0",
  "description": "نظام متطور لإدارة الطلبات البرلمانية - النسخة 2.0",
  "author": "مهندس محمد حماد",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/mohamednasr5/work",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohamednasr5/work.git"
  },
  "keywords": [
    "parliament",
    "requests",
    "الطلبات",
    "البرلمان",
    "pwa",
    "web-app",
    "electron",
    "firebase"
  ],
  "scripts": {
    "start": "python -m http.server 8000",
    "dev": "python -m http.server 8080",
    "build": "npm run minify && npm run electron-build",
    "minify": "uglifyjs *.js -c -m -o dist/app.min.js",
    "serve": "http-server -p 8000",
    "electron-build": "electron-packager . --all --out=dist --prune=true --icon=./icon",
    "electron-dev": "electron .",
    "android": "npm run build && cordova build android",
    "ios": "npm run build && cordova build ios",
    "test": "jest",
    "lint": "eslint *.js"
  },
  "dependencies": {
    "firebase": "^9.22.0",
    "chart.js": "^4.3.0",
    "xlsx": "^0.18.5",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-packager": "^17.1.1",
    "electron-builder": "^24.6.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "uglify-js": "^3.17.4",
    "http-server": "^14.1.1",
    "cordova": "^12.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "last and_qq 4 versions"
  ],
  "main": "main.js",
  "cordova": {
    "plugins": {
      "cordova-plugin-device": {},
      "cordova-plugin-file": {},
      "cordova-plugin-network-information": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android",
      "ios"
    ]
  },
  "electron": {
    "build": {
      "appId": "com.parliament.requests",
      "productName": "نظام إدارة الطلبات",
      "directories": {
        "output": "dist",
        "buildResources": "assets"
      },
      "win": {
        "target": [
          "nsis",
          "portable"
        ],
        "certificateFile": null,
        "certificatePassword": null
      },
      "mac": {
        "target": [
          "dmg",
          "zip"
        ],
        "category": "public.app-category.productivity"
      },
      "linux": {
        "target": [
          "AppImage",
          "deb"
        ],
        "category": "Office"
      },
      "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "عرض الطلبات"
      }
    }
  }
}
